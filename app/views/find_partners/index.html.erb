<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Find Partners</h1>

  <!-- Search Form -->
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <%= form_with url: find_partners_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Day of Week -->
        <div>
          <%= form.label :day_of_week, "Day of Week", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :day_of_week, 
                options_for_select([
                  ["Sunday", 0], 
                  ["Monday", 1], 
                  ["Tuesday", 2], 
                  ["Wednesday", 3], 
                  ["Thursday", 4], 
                  ["Friday", 5], 
                  ["Saturday", 6]
                ], @day_of_week),
                { prompt: "Select a day" },
                { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
        </div>

        <!-- Start Time -->
        <div>
          <%= form.label :start_time, "Start Time", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.time_field :start_time, 
                value: @start_time,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <!-- End Time -->
        <div>
          <%= form.label :end_time, "End Time", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.time_field :end_time, 
                value: @end_time,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Search Partners", 
              class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>

  <!-- Search Results -->
  <% if @day_of_week && @start_time && @end_time %>
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">
          Search Results for <%= Availability::DAYS_OF_WEEK[@day_of_week] %>, 
          <%= Time.parse(@start_time).strftime("%I:%M %p") %> - <%= Time.parse(@end_time).strftime("%I:%M %p") %>
        </h2>
      </div>

      <% if @paginated_partners.any? %>
        <div class="divide-y divide-gray-200">
          <% @paginated_partners.each do |partner_data| %>
            <div class="px-6 py-4">
              <div class="flex items-start justify-between">
                <div>
                  <h3 class="text-lg font-medium text-gray-900">
                    <%= partner_data[:user].name %>
                  </h3>
                  <p class="text-sm text-gray-500 mt-1">
                    <%= partner_data[:user].email %>
                  </p>
                  
                  <div class="mt-2">
                    <p class="text-sm text-gray-600 font-medium">Available times:</p>
                    <% partner_data[:overlaps].each do |overlap| %>
                      <p class="text-sm text-green-600">
                        <%= overlap[:start_time].strftime("%I:%M %p") %> - <%= overlap[:end_time].strftime("%I:%M %p") %>
                      </p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 border-t border-gray-200">
          <%= pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      <% else %>
        <div class="px-6 py-8 text-center">
          <p class="text-gray-500">No partners found for that time.</p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
